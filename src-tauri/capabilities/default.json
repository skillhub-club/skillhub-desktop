{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default capabilities for SkillHub Desktop",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/.claude/**",
        "$HOME/.cursor/**",
        "$HOME/.opencode/**",
        "$HOME/.vscode/**",
        "$HOME/.config/**",
        "$APPDATA/**"
      ]
    }
  ]
}
